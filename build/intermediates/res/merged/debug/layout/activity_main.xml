<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:gravity="center" >

    <ImageView
        android:id="@+id/ivPodImage"
        android:layout_width="930dp"
        android:layout_height="960dp"
        android:layout_gravity="center"
        android:contentDescription="@string/app_name"
        android:src="@drawable/splash" />

    <RelativeLayout
        android:id="@+id/rlPodScreen"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center" >

        <ImageView
            android:id="@+id/ivAppIcon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_launcher"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tvPodProcess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ivAppIcon"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:shadowColor="@android:color/white"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1.5"
            android:text="@string/bad_usb"
            android:textColor="@android:color/black"
            android:textIsSelectable="false" />

        <TextView
            android:id="@+id/tvPodSongName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivAppIcon"
            android:layout_centerHorizontal="true"
            android:shadowColor="@android:color/white"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1.5"
            android:text="@string/app_name"
            android:textColor="@android:color/black"
            android:textIsSelectable="false" />
    </RelativeLayout>

</FrameLayout>